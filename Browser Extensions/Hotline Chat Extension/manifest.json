{
  "manifest_version": 2,
 
  "name": "iLeapMe-hotline",
  "version": "0.1.0",
  "description": "The hotline communication tool",
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
	"matches": ["*://*/*"]
  }],
  
  "permissions": [
      "storage"
    ],
	
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
 
}